<body id="sightcastnewbody">
<div id="sightcastnewform" class="col-md-6 col-md-offset-3">
    <div id="sightcastnewpanel" class="panel panel-default">
      <div class="panel-body">
        <h1 style="font-weight:lighter;">Create Your SightCast</h1>
          <%= form_for @sightcast do |f| %>
          <% if @sightcast.errors.any? %>
            <div id = "error_explanation">
              <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
              <ul>
                <% @sightcast.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class = "field">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", autofocus: true  %>
          </div>

          <div class = "field">
            <%= f.label :description %>
            <%= f.text_area :description,class: "form-control" %>
          </div>

          <!-- <div class = "field">
            <%= f.label :scheduled_at %>
            <%= f.datetime_field :scheduled_at,class: "form-control" %>
          </div> -->

          <div class="field">
            <label for="sightcast_scheduled_at">Scheduled At</label>
            <!-- <div class='col-sm-6'> -->
                <!-- <div class="form-group">
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control"
                        name = "sightcast[scheduled_at]" id = "sightcast_scheduled_at" />
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div> -->
            <!-- </div> -->
            <div id="datetimepicker1"></div>
            <script type="text/javascript">
                $(function () {
                    $('#datetimepicker1').datetimepicker({
                      format: 'YYYY-MM-DD h:mm A',
                      inline: true,
                      sideBySide: true

                    });
                });
            </script>
          </div>

         <div class="actions" style="padding:10px 0px;">
          <%= f.submit class: "btn btn-default",  id:"sightcastbutton"  %>
        </div>
        <% end %>
    </div>
  </div>
</div>
