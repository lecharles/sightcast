<div id="sightcastnewform" class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= form_for @sightcast do |f| %>
          <% if @sightcast.errors.any? %>
            <div id = "error_explanation">
              <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
              <ul>
                <% @sightcast.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class = "field">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", autofocus: true  %>
          </div>

          <div class = "field">
            <%= f.label :description %>
            <%= f.text_area :description,class: "form-control" %>
          </div>

          <div class = "field">
            <%= f.label :scheduled_at %>
            <%= f.datetime_field :scheduled_at,class: "form-control" %>
          </div>

         <div class="actions" style="padding:10px 0px;">
          <%= f.submit class: "btn btn-default",  id:"sightcastbutton"  %>
        </div>

        <% end %>
    </div>
  </div>
</div>

